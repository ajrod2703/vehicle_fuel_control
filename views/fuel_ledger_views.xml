<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_vehicle_fuel_ledger_list" model="ir.ui.view">
        <field name="name">vehicle.fuel.ledger.list</field>
        <field name="model">vehicle.fuel.ledger</field>
        <field name="arch" type="xml">
            <list string="Fuel Ledger">
                <field name="name"/>
                <field name="date"/>
                <field name="vehicle_id"/>
                <field name="liters"/>
                <field name="odometer"/>
                <field name="cost"/>
                <field name="user_id"/>
                <field name="request_id"/>
            </list>
        </field>
    </record>

    <record id="view_vehicle_fuel_ledger_form" model="ir.ui.view">
        <field name="name">vehicle.fuel.ledger.form</field>
        <field name="model">vehicle.fuel.ledger</field>
        <field name="arch" type="xml">
            <form string="Ledger Entry">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="date"/>
                            <field name="vehicle_id"/>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="liters"/>
                            <field name="odometer"/>
                            <field name="cost"/>
                        </group>
                    </group>
                    <group>
                        <field name="request_id" widget="many2one" optional="show"/>
                        <field name="notes" nolabel="1" placeholder="Notes..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_vehicle_fuel_ledger_search" model="ir.ui.view">
        <field name="name">vehicle.fuel.ledger.search</field>
        <field name="model">vehicle.fuel.ledger</field>
        <field name="arch" type="xml">
            <search string="Search Ledger">
                <field name="name"/>
                <field name="vehicle_id"/>
                <field name="user_id"/>
                <filter name="group_vehicle" string="Vehicle" context="{'group_by':'vehicle_id'}"/>
                <filter name="group_date" string="Date" context="{'group_by':'date'}"/>
            </search>
        </field>
    </record>

    <record id="action_vehicle_fuel_ledger" model="ir.actions.act_window">
        <field name="name">Fuel Ledger</field>
        <field name="res_model">vehicle.fuel.ledger</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>