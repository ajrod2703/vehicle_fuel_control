<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_vehicle_fuel_vehicle_list" model="ir.ui.view">
        <field name="name">vehicle.fuel.vehicle.list</field>
        <field name="model">vehicle.fuel.vehicle</field>
        <field name="arch" type="xml">
            <list string="Vehicles">
                <field name="name"/>
                <field name="license_plate"/>
                <field name="model"/>
                <field name="driver_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_vehicle_fuel_vehicle_form" model="ir.ui.view">
        <field name="name">vehicle.fuel.vehicle.form</field>
        <field name="model">vehicle.fuel.vehicle</field>
        <field name="arch" type="xml">
            <form string="Vehicle">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="license_plate"/>
                        <field name="model"/>
                        <field name="driver_id"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_vehicle_fuel_vehicle_search" model="ir.ui.view">
        <field name="name">vehicle.fuel.vehicle.search</field>
        <field name="model">vehicle.fuel.vehicle</field>
        <field name="arch" type="xml">
            <search string="Search Vehicles">
                <field name="name"/>
                <field name="license_plate"/>
                <filter name="active" string="Active" domain="[('active','=',True)]"/>
            </search>
        </field>
    </record>

    <record id="action_vehicle_fuel_vehicle" model="ir.actions.act_window">
        <field name="name">Vehicles</field>
        <field name="res_model">vehicle.fuel.vehicle</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your first vehicle</p>
        </field>
    </record>
</odoo>