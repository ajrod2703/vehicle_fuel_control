<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_fuel_consumption_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Fuel Consumption Report</h2>
                        <p t-if="docs">
                            <strong>Period:</strong> 
                            <t t-esc="min(docs.mapped('date'))"/> to <t t-esc="max(docs.mapped('date'))"/>
                        </p>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Vehicle</th>
                                    <th>Date</th>
                                    <th>Liters</th>
                                    <th>Odometer</th>
                                    <th>Cost</th>
                                    <th>Processed by</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="docs" t-as="line">
                                    <td><t t-esc="line.vehicle_id.name"/></td>
                                    <td><t t-esc="line.date"/></td>
                                    <td><t t-esc="line.liters"/></td>
                                    <td><t t-esc="line.odometer"/></td>
                                    <td><t t-esc="line.cost"/></td>
                                    <td><t t-esc="line.user_id.name"/></td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="2"><strong>Total:</strong></td>
                                    <td><t t-esc="sum(docs.mapped('liters'))"/></td>
                                    <td></td>
                                    <td><t t-esc="sum(docs.mapped('cost'))"/></td>
                                    <td></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>